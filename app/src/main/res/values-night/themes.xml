<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JInventario" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.JInventario.Login">
        <item name="backgroundTint">@color/loginColorNight</item>
        <item name="android:textColor">@color/loginTextColorNight</item>
    </style>

    <style name="Theme.JInventario.Separator">
        <item name="android:background">@color/separatorColorNight</item>
    </style>

    <style name="Theme.JInventario.Link">
        <item name="android:textColor">@color/linkColorNight</item>
    </style>
</resources>