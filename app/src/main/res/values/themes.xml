<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Theme.JInventario" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColorDay</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColorDay</item>
        <item name="colorOnPrimary">@color/primaryTextColorDay</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColorDay</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColorDay</item>
        <item name="colorOnSecondary">@color/secondaryTextColorDay</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textCursorDrawable">@drawable/cursor_day</item>
        <!-- Dialog -->
        <item name="alertDialogTheme">@style/Theme.JInventario.Dialog.Alert</item>
        <!-- Item Drawer Layout -->
        <item name="colorNavigationItem">@color/menu_item_color_state_day</item>
        <item name="colorNavigationItemSelected">@color/primaryTextColorItemSelected</item>
    </style>

    <style name="Theme.JInventario.Splash" parent="@style/Theme.JInventario">
        <item name="android:background">@drawable/background_splash_day</item>
    </style>

    <style name="Theme.JInventario.Logo" parent="@style/Theme.JInventario">
        <item name="android:background">@drawable/background_logo_day</item>
    </style>

    <style name="Theme.JInventario.ProgressBarWhite" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@android:color/white</item>
    </style>

    <!-- Usado na activity do AndroidManifest -->
    <style name="Theme.JInventario.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.JInventario.Fields">
        <item name="hintTextColor">@color/secondaryDarkColorDay</item>
        <item name="boxStrokeColor">@color/secondaryDarkColorDay</item>
        <item name="passwordToggleTint">@color/secondaryDarkColorDay</item>
        <item name="boxBackgroundColor">@null</item>
    </style>

    <style name="Theme.JInventario.Fields.Contagem">
        <item name="boxBackgroundMode">outline</item>
        <item name="shapeAppearanceOverlay">@null</item>
        <item name="boxCollapsedPaddingTop">0dp</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox</item>
    </style>

    <style name="Theme.JInventario.Dialog.Alert" parent="Theme.MaterialComponents.Light.Dialog.Alert.Bridge">
        <item name="android:textColor">@color/primaryTextColorItem</item>
        <item name="buttonBarPositiveButtonStyle">@style/Theme.JInventario.Button.Dialog</item>
        <item name="buttonBarNegativeButtonStyle">@style/Theme.JInventario.Button.Dialog</item>
        <item name="buttonBarNeutralButtonStyle">@style/Theme.JInventario.Button.Dialog</item>
    </style>

    <style name="Theme.JInventario.Button.Dialog" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primaryTextColorItem</item>
    </style>

    <style name="Theme.JInventario.Dialog.Button" parent="Widget.Design.NavigationView">
        <item name="android:outlineProvider">none</item>
        <item name="backgroundTint">@color/zxing_transparent</item>
        <item name="android:tint">@color/zxing_transparent</item>
        <item name="android:textColor">@color/primaryTextColorItem</item>
    </style>

    <style name="Theme.JInventario.Alert">
        <item name="android:textColor">@color/design_default_color_error</item>
    </style>

    <style name="Theme.JInventario.Button">
        <item name="backgroundTint">@color/buttonColorDay</item>
        <item name="android:tint">@color/buttonColorDay</item>
        <item name="android:textColor">@color/loginTextColorDay</item>
    </style>

    <style name="Theme.JInventario.Button.Back" parent="Theme.JInventario.Dialog.Button" />

    <style name="Theme.JInventario.Button.NewContagem">
        <item name="icon">@drawable/ic_add</item>
    </style>

    <style name="Theme.JInventario.Separator">
        <item name="android:background">@color/separatorColor</item>
    </style>

    <style name="Theme.JInventario.Google">
        <item name="backgroundTint">@color/googleColor</item>
        <item name="android:textColor">@color/googleTextColor</item>
    </style>

    <style name="Theme.JInventario.Link">
        <item name="android:textColor">@color/linkColor</item>
    </style>

    <style name="Theme.JInventario.HeaderDrawerLayout">
        <item name="android:background">@color/secondaryLightColorDay</item>
        <item name="android:textColor">@color/secondaryTextColorDay</item>
        <item name="android:src">@drawable/ic_default_user</item>
        <item name="android:tint">@color/secondaryTextColorNigth</item>
    </style>

    <style name="Theme.JInventario.DrawerLayout" parent="Widget.Design.NavigationView">
        <item name="itemIconTint">?attr/colorNavigationItem</item>
        <item name="itemTextColor">?attr/colorNavigationItem</item>
    </style>

    <!-- Barra de status -->
    <style name="Theme.JInventario.Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/secondaryTextColorNigth</item>
    </style>
    <style name="Theme.JInventario.PopupMenu" parent="ThemeOverlay.AppCompat.Light" />
</resources>