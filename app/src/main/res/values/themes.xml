<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JInventario" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.JInventario.Button">
        <item name="backgroundTint">@color/loginColor</item>
        <item name="android:textColor">@color/loginTextColor</item>
        <item name="android:tint">@color/loginColor</item>
    </style>

    <style name="Theme.JInventario.Separator">
        <item name="android:background">@color/separatorColor</item>
    </style>

    <style name="Theme.JInventario.Google">
        <item name="backgroundTint">@color/googleColor</item>
    </style>

    <style name="Theme.JInventario.Link">
        <item name="android:textColor">@color/linkColor</item>
    </style>

    <style name="Theme.JInventario.HeaderDrawerLayout">
        <item name="android:background">@color/secondaryColor</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="Theme.JInventario.Inicio">

    </style>

    <style name="Theme.Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PopupMenu" parent="Theme.MaterialComponents.Light" />
</resources>